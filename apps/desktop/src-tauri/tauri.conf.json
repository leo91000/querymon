{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QueryMon",
  "identifier": "com.querymon.app",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": { "cwd": "../../web", "script": "pnpm dev" },
    "beforeBuildCommand": { "cwd": "../../web", "script": "pnpm build" },
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "QueryMon",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "icon": []
  }
}
