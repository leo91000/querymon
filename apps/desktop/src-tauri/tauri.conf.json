{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QueryMon",
  "identifier": "com.querymon.app",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "pnpm -w --filter @querymon/web dev",
    "beforeBuildCommand": "pnpm -w --filter @querymon/web build",
    "frontendDist": "../../web/dist",
    "devUrl": "http://localhost:3000"
  },
  "app": {
    "windows": [
      {
        "title": "QueryMon",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  }
}

